<%= render "shared/header" %>


<div class="container">
<h1>  Add your new artwork today! </h1>

    <div class="mt-3">
    <%= simple_form_for(@artworks) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :height %>
      <%= f.input :width %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Submit", class: "btn btn-primary mt-3" %>
    <% end %>
    </div>

    <div>
      <%= link_to artworks_path do %>
        <i class="fa-solid fa-plus"></i> Go back to artworks
      <% end %>
    </div>
</div>


