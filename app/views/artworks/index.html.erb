<%= render "shared/header" %>
<div class="container">
  <div class="container">
    <div class="row mt-4 ml-2 d-flex justify-content-center">
      <div class="card p-0 col-5 ">
        <div class="container p-3 ml-2">
          <%= form_with url: artworks_path, method: :get, html: { class: "d-flex search-icon" } do |f| %>
            <%= f.text_field :query,
              value: params[:query],
              class: "form-control",
              placeholder: "Location..."
            %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
        <div class="card col-7 p-0">
          <div class="container p-3">
            <%= form_with url: artworks_path, method: :get, html: { class: "d-flex search-icon" } do |f| %>
              <%= f.select(:price, options_for_select(Artwork.all.map(&:price).uniq, selected: params[:price]), { :include_blank => 'All prices' }, { class: "form-select select-category" }) %>
              <%= f.select(:artist, options_for_select(Artwork.all.map(&:user).map(&:first_name).uniq, selected: params[:artist]), { :include_blank => 'All artists' }, { class: "form-select select-category" }) %>
            <%= submit_tag "Filter", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="bg-light">
    <div class="bg-light mt-4">
      <div class="row mt-4 d-flex justify-content-start">
        <% if @artworks.empty? %>
          <div class="container">
            <div class="card mx-1" style="width: 30rem;">
              <div class="card-body">
                <div class="row">
                  <i class="fa-solid fa-triangle-exclamation" style="color: #d58f15;"> <span class="icon-text">Couldn't find any artworks matching your criteria</span></i>
                </div>
              </div>
            </div>
          </div>
          <% @artworks_false_search.each do |artwork| %>
            <%= render "card", artwork: artwork %>
          <% end %>
        <% else %>
          <% @artworks.each do |artwork| %>
            <%= render "card", artwork: artwork %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
