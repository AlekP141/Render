          <div class="card-title">
            <div class="d-flex justify-content-between p-2">
              <div>
                <h5><%= artwork.name %></h5>
              </div>
              <div>
                <i class="fa-solid fa-star fa-sm" style="color:#ffc300"> <%= artwork.average_rating %></i>
              </div>
            </div>
            <p class="card-text mx-2">Â£<%= artwork.price %> p/night</p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
