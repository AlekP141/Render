<div class="col-4 p-2">
  <%= link_to artwork_path(artwork), class: "card m-2 shadow-sm card-links index-wrap" do %>

    <% if artwork.photo.attached?  %>
      <%= cl_image_tag artwork.photo.key, class: "card-img-top-rounded", id: "card-image" %>
    <% else %>
      <img class="card-img-top rounded" id="card-image" src="https://images.unsplash.com/photo-1579783902614-a3fb3927b6a5?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8YXJ0fGVufDB8fDB8fHww&auto=format&fit=crop&w=800&q=60" alt="Card image cap">
    <% end %>
    <div class="index-text">
      <button class="btn btn-primary mx-1 my-3" type="submit">Reserve Now!</button>
    </div>
    <div class="card-title">
      <div class="d-flex justify-content-between mt-2 px-3">
        <div>
          <h5><strong><%= artwork.name %></strong></h5>
        </div>
        <div>
          <i class="fa-solid fa-star fa-sm" style="color:#ffc300"> <span class="icon-text">
          <% if !artwork.average_rating %>
          4.15
          <% else %>
          <%= artwork.average_rating %>
          <% end %>
          </span></i>
        </div>
      </div>
      <div class="d-flex justify-content-between mt-1 px-3">
        <div>
          <p class="card-text">Â£<%=artwork.price%>/day</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
