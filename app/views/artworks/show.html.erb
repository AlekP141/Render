<%= render "shared/header" %>
<div data-controller="booking-form">
  <div class="container mb-3">
    <div class="card mt-4 shadow-sm card-size-limiter">
      <div class="d-flex justify-content-between" style="max-height: inherit">
      <div class="d-flex flex-grow-1 flex-column justify-content-between">
        <div>
          <div class="card-title">
            <div class="d-flex justify-content-between mt-3 px-3">
              <div class="mt-3">
                <h3><strong><%= @artwork.name %></strong></h3>
              </div>
              <div class="mt-3">
                <i class="fa-solid fa-star fa-lg" style="color:#ffc300"> <span class="icon-text"><%= @artwork.average_rating %></span></i>
              </div>
            </div>
            <div class="d-flex justify-content-between mt-2 px-3">
              <div>
                <p class="card-text"><%=@artwork.description%></p>
              </div>
            </div>
            <div class="d-flex justify-content-start mt-2 px-2">
              <div class="m-2">
                <p class="card-text">Address: <strong><%=@artwork.address%></strong></p>
              </div>
            </div>
          </div>
          <hr class="mx-2 my-4">
          <div class="card-body py-0 px-2">
            <div class="d-flex justify-content-start ">
              <div class="mx-2 mt-2">
                <i class="fa-solid fa-arrows-up-down fa-lg"> <span class="icon-text"><%= @artwork.height %>cm</span></i>
              </div>
            </div>
          </div>
          <div class="card-body py-0 px-2">
            <div class="d-flex justify-content-start">
              <div class="mx-2 mt-2">
                <i class="fa-solid fa-arrows-left-right fa-lg"> <span class="icon-text"><%= @artwork.width %>cm</span></i>
              </div>
            </div>
          </div>
          <div class="card-body py-0 px-2">
            <div class="d-flex justify-content-start">
              <div class="m-2">
                <h6 class="card-text"><strong>£</strong><strong data-booking-form-target="pricePerNight"><%=@artwork.price%></strong>/night</h6>
              </div>
            </div>
          </div>
        </div>
        <div>
          <div class="d-flex flex-column flex-grow-1 justify-content-end">
            <div class="m-3 mb-4">
              <button
              data-action="click->booking-form#show_booking_form"
              type="button" class="btn btn-primary">Make a booking</button>
            </div>
          </div>
        </div>
      </div>
      <div class="ms-4" style="max-height: inherit">
        <%= cl_image_tag @artwork.photo.key, alt: @artwork.name, class:"card-img-top rounded", style:"max-height: inherit" %>
      </div>
    </div>
    </div>
  </div>
  <div
  data-booking-form-target="bookingFormDiv"
  class="d-none container mb-3">
    <div class="card mt-2 shadow-sm p-3">
      <div class="row d-flex justify-content-between">
        <div class="col-5">
          <h3 class="text-purple">Make a new booking</h3>

          <%# BOOKING FORM %>

          <div class="mt-3">
            <form action="" data-booking-form-target="form" data-action="submit->booking-form#submit">
              <label for="start_date" class="form-label date required">Start Date</label>
              <input type="date" id="start_date" name="start_date" class="form-select mx-1 date required">
              <label for="end_date" class="form-label date required">End Date</label>
              <input type="date" id="end_date" name="end_date" class="form-select mx-1 date required">
              <button type="submit" class="btn btn-primary mt-3">Submit Dates</button>
            </form>
          </div>

        </div>
        <div class="col-7 d-flex flex-column border-start mt-5">
          <div class="border-bottom pb-3">
            <p class="">Number of nights: <span data-booking-form-target="numberOfNights"></span></p>
            <p class="">Service Charge: £<span data-booking-form-target="serviceCharge"></span></p>
          </div>
          <div class="align-self-end text-end pt-3 ">
            <p class="">Total Price: £<span data-booking-form-target="totalPrice"></span></p>
            <%= simple_form_for [@artwork, @booking] do |f| %>
              <div class="d-none">
              <%= f.input :start_date, as: :date, html5: true %>
              <%= f.input :end_date, as: :date, html5: true %>
              </div>
              <%= f.submit "Confirm", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
