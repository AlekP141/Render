<%= render "shared/header" %>

<div class="container">


  <h2 class="mt-4">Welcome <%= current_user.first_name%>! Here are your listings:</h2>

  <% @artworks.each do |artwork| %>
    <div class="container">
    <div class="card mt-4 shadow-sm">
      <div class="row d-flex justify-content-between">
      <div class="col-7">
        <div class="card-title m-0 p-0">
          <div class="d-flex justify-content-between mt-3 px-3">
            <div class="mt-3">
              <h3><strong><%= artwork.name %></strong></h3>
            </div>
            <div class="mt-3">
              <i class="fa-solid fa-star fa-lg" style="color:#ffc300"> <span class="icon-text"><%= artwork.average_rating %></span></i>
            </div>
          </div>
          <div class="d-flex justify-content-between mt-2 px-3">

          </div>
          <div class="d-flex justify-content-between px-2">
            <div class="m-2">
              <p class="card-text">Address: <strong><%=artwork.address%></strong></p>
            </div>
            <div class="mx-2 mt-2">
              <i class="fa-solid fa-arrows-up-down fa-lg"> <span class="icon-text"><%= artwork.height %>cm tall</span></i>
            </div>
          </div>
        </div>
        <div class="card-body py-0 px-1">
          <div class="d-flex justify-content-start">
          </div>
        </div>
        <div class="card-body py-0 px-2">
          <div class="d-flex justify-content-between">
            <div class="m-2">
              <h6 class="card-text">Total cost: <strong>Â£<%=artwork.price%></strong></h6>
            </div>
            <div class="mx-2 mt-2">
              <i class="fa-solid fa-arrows-left-right fa-lg"> <span class="icon-text"><%= artwork.width %>cm wide</span></i>
            </div>
          </div>
        </div>
        <div class="card-body py-4 px-2">
          <div class="d-flex justify-content-start">
            <div class="m-2">
              <%= link_to "edit", edit_artwork_path(artwork) %>
            </div>
            <div class="m-2">
              <%= link_to "Delete",artwork_path(artwork), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger mb-2" %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-5">
        <img class="card-img-top rounded" id="myartworks-image" src="https://images.unsplash.com/photo-1579783902614-a3fb3927b6a5?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8YXJ0fGVufDB8fDB8fHww&auto=format&fit=crop&w=800&q=60" alt="Card image cap">
      </div>
    </div>
    </div>
  </div>
<% end %>
</div>
