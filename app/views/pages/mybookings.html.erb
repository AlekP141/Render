<%= render "shared/header" %>

<div class="container">
  <h2 class="mt-4">Welcome <%= current_user.username%>! Here are your bookings:</h2>

  <% @bookings.each do |booking| %>
    <div class="container">
    <div class="card mt-4 shadow-sm" id="mybookings-card">
      <div class="row d-flex justify-content-between">
      <div class="col-7 d-flex flex-column justify-content-between">
        <div class="card-title m-0 p-0">
          <div class="d-flex justify-content-between mt-3 px-3">
            <div class="mt-3">
              <h3><strong><%= booking.artwork.name %></strong></h3>
            </div>
            <div class="mt-3">
              <i class="fa-solid fa-star fa-lg" style="color:#ffc300"> <span class="icon-text"><%= booking.artwork.average_rating %></span></i>
            </div>
          </div>
        </div>
        <div class="card-body py-0 px-0 mx-2 border-bottom card-divider">
          <div class="d-flex justify-content-between">
            <div class="m-2 mt-2">
              <h5 class="card-text">Dates: <strong><%= booking.start_date %></strong> to <strong><%= booking.end_date %></strong></h5>
            </div>
            <div class="mx-2 mt-2">
              <i class="fa-solid fa-arrows-up-down fa-lg"> <span class="icon-text"><%= booking.artwork.height %>cm</span></i>
            </div>
          </div>
          <div class="d-flex justify-content-between">
            <div class="mx-2 mt-2">
              <p class="card-text">Address: <strong><%=booking.artwork.address%></strong></p>
            </div>
            <div class="mx-2 mt-2">
              <i class="fa-solid fa-arrows-left-right fa-lg"> <span class="icon-text"><%= booking.artwork.width %>cm</span></i>
            </div>
          </div>
        </div>
          <div class="card-body py-0 px-2 d-flex justify-content-between align-items-center">
            <div class="m-2">
              <h6 class="card-text">Total cost: <strong>Â£<%= ((booking.end_date - booking.start_date).to_i * booking.artwork.price).round(2) %></strong></h6>
            </div>
            <div class="m-2">
              <%= link_to "Cancel booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-secondary show-btn-delete btn-sm" %>
            </div>
          </div>
      </div>
      <div class="col-5">
        <img class="card-img-top rounded" id="mybookings-image" src="https://images.unsplash.com/photo-1579783902614-a3fb3927b6a5?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8YXJ0fGVufDB8fDB8fHww&auto=format&fit=crop&w=800&q=60" alt="Card image cap">
      </div>
    </div>
    </div>
  </div>
  <% end %>
</div>
